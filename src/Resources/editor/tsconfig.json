{
  "compilerOptions": {
    "types": ["jest", "node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/**/*.vue"]
}
